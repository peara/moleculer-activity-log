{
  "name": "activity.logs-service",
  "version": "1.0.0",
  "description": "My Moleculer microservice",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services",
    "dev-log": "DEBUG=knex:query moleculer-runner --repl --hot services",
    "start": "moleculer-runner services",
    "ci": "NODE_ENV=ci jest --watch",
    "test": "NODE_ENV=test jest --coverage --runInBand",
    "test-ci": "NODE_ENV=ci ELASTICSEARCH_HOSTS=http://elasticsearch:9200 jest --coverage --forceExit --runInBand",
    "test-inspect": "NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand --detectOpenHandles",
    "dc-build": "docker-compose -f docker/dev.docker-compose.yml build",
    "up-elastic": "docker-compose -f docker/dev.docker-compose.yml up -d elasticsearch",
    "up-kibana": "docker-compose -f docker/dev.docker-compose.yml up -d kibana",
    "stop-elastic": "docker-compose -f docker/dev.docker-compose.yml stop kibana elasticsearch",
    "lint": "eslint services app test",
    "lint-fix": "eslint services app test --fix",
    "db": "psql -U super_node -h localhost -d lux_test"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "handlebars": "^4.7.2",
    "jest": "^25.0.0",
    "jest-cli": "^25.0.0",
    "moleculer-repl": "^0.6.1"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.6.0",
    "amqplib": "^0.5.3",
    "debug": "^4.1.1",
    "esm": "^3.2.25",
    "fast-json-patch": "^3.0.0-1",
    "ioredis": "^3.2.2",
    "knex": "^0.19.5",
    "lodash": "^4.17.11",
    "moleculer": "^0.13.0",
    "moleculer-bull": "^0.2.5",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "objection": "^1.6.9",
    "pg": "^7.11.0",
    "randomstring": "^1.1.5",
    "redlock": "^3.1.2"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "rootDir": ".",
    "collectCoverageFrom": [
      "**/app/**",
      "**/services/**"
    ],
    "roots": [
      "./test"
    ],
    "moduleNameMapper": {
      "@root/(.*)": "<rootDir>/$1",
      "@models/(.*)": "<rootDir>/app/models/$1",
      "@helpers/(.*)": "<rootDir>/app/helpers/$1",
      "@services/(.*)": "<rootDir>/services/$1",
      "@test/(.*)": "<rootDir>/test/$1"
    }
  },
  "_moduleAliases": {
    "@root": ".",
    "@models": "./app/models",
    "@helpers": "./app/helpers",
    "@services": "./app/services"
  }
}
